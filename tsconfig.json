{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "importHelpers": true,
        "strict": true,
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src/*",
        "src/module/config.ts",
        "src/module/utils-ext.ts"
    ],
    "exclude": ["node_modules"]
}
